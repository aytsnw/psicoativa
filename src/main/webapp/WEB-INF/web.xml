<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <listener>
        <listener-class>com.psicoativa.App</listener-class>
    </listener>
    
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.psicoativa.controller.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.psicoativa.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.psicoativa.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>client</servlet-name>
        <servlet-class>com.psicoativa.controller.ClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>psychologist</servlet-name>
        <servlet-class>com.psicoativa.controller.PsychologistServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>appointment</servlet-name>
        <servlet-class>com.psicoativa.controller.AppointmentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/api/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
            <servlet-name>register</servlet-name>
            <url-pattern>/api/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
            <servlet-name>client</servlet-name>
            <url-pattern>/api/client</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
            <servlet-name>psychologist</servlet-name>
            <url-pattern>/api/psychologist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
            <servlet-name>appointment</servlet-name>
            <url-pattern>/api/appointment</url-pattern>
    </servlet-mapping>
</web-app>